{
    "name": "tok3/weight-conversions",
    "description": "Packagetest weight-conversions",
    "keywords": [
        "tok3",
        "weight-conversions"
    ],
    "homepage": "https://github.com/tok3/weight-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "tok3",
            "email": "tobias@eq3w.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "pestphp/pest": "^3.2",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Tok3\\WeightConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tok3\\WeightConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
